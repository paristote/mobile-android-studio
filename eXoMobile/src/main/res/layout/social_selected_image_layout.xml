<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DCDCDCDC"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/social_selected_image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/ActivityDetail"
        android:scaleType="centerCrop"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/social_selected_image_remove_button"
            android:layout_width="0dip"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/cancel_button_background_shape"
            android:shadowColor="#000000"
            android:shadowDx="1.0"
            android:shadowDy="2.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/social_selected_image_ok_button"
            android:layout_width="0dip"
            android:layout_height="44dp"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/send_button_background_shape"
            android:shadowColor="#888888"
            android:shadowDx="1.0"
            android:shadowDy="2.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>